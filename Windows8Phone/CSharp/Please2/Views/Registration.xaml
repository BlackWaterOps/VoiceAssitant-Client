            </StackPanel>

            <HyperlinkButton x:Name="TermsOfUse" Grid.Row="1" Content="Term of use" NavigateUri="http://stremor.com" HorizontalAlignment="Left" Visibility="Collapsed"/>
                
            <Button x:Name="RegisterButton" Grid.Row="1" Content="Sign Up" Click="RegisterButton_Click" HorizontalAlignment="Left"/>
            -->
        
    </Grid>
    
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar/>
    </phone:PhoneApplicationPage.ApplicationBar>
</local:ViewBase>