                                    </StackPanel>
                                </Grid>
                            </Border>
                            -->
                            
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>