    <DataTemplate x:Key="shopping">
        <Border Background="White" Padding="10" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="104"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="6"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0">
                    <Image Source="{Binding image}" Width="104" Height="104"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,0,0">
                    <HyperlinkButton x:Name="ShoppingTitle" 
                                         NavigateUri="{Binding url}" 
                                         TargetName="shopping" 
                                         Content="{Binding title}"
                                         Style="{StaticResource CustomHyperlinkButtonStyle}"
                                         Foreground="Blue" 
                                         Margin="-12,0,0,0" 
                                         HorizontalAlignment="Left"/>
                    <TextBlock x:Name="ShoppingPrice" 
                                   Text="{Binding price}" 
                                   Margin="0,10,0,0" 
                                   Foreground="Black" 
                                   FontSize="{StaticResource PhoneFontSizeLarge}" 
                                   FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="events">
        <Border Background="White" Padding="10" Margin="0,15,0,0">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Tap">
                    <command:EventToCommand Command="{Binding Path=ListViewModel.EventItemSelection, Source={StaticResource Locator}}" CommandParameter="{Binding}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="104"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="6"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0">
                    <Image Source="{Binding image}" MaxWidth="100"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,0,0">
                    <TextBlock x:Name="EventTitle" 
                                   Grid.Column="1" 
                                   Text="{Binding title}" 
                                   Margin="0,10,0,0" 
                                   Foreground="Black" 
                                   TextWrapping="Wrap" 
                                   FontWeight="SemiBold"/>

                    <TextBlock x:Name="EventTime" 
                                   Grid.Column="1" 
                                   Text="{Binding start_time, Converter={StaticResource PrettyDateConverter}}" 
                                   Margin="0,10,0,0" 
                                   Foreground="Black"/>

                    <TextBlock x:Name="EventLocation" 
                                   Grid.Column="1" 
                                   Text="{Binding location.address}" 
                                   Margin="0,10,0,0" 
                                   Foreground="Black" 
                                   TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="movies">
        <Border Background="White" Padding="15">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Tap">
                    <command:EventToCommand Command="{Binding Path=ListViewModel.MovieItemSelection, Source={StaticResource Locator}}" CommandParameter="{Binding}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <Image Source="{Binding image}" MaxWidth="100" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="MovieTitle" 
                                   Grid.Column="1" 
                                   Text="{Binding title}" 
                                   Foreground="Black" 
                                   TextWrapping="Wrap" 
                                   FontWeight="SemiBold"/>

                    <TextBlock x:Name="MovieRating" 
                                   Grid.Column="1" 
                                   Text="{Binding mpaa_rating}" 
                                   Margin="0,10,0,0" 
                                   Foreground="Black"/>

                    <TextBlock x:Name="MovieDescription" 
                                   Grid.Column="1" 
                                   Text="{Binding critics_consensus}" 
                                   Margin="0,10,0,0" 
                                   Foreground="Black" 
                                   TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="real_estate">
        <Border Background="White" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <Image Source="{Binding image}" MaxWidth="100" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="RealEstateTitle" 
                                   Grid.Column="1" 
                                   Text="{Binding title}" 
                                   Foreground="Black" 
                                   TextWrapping="Wrap" 
                                   FontWeight="SemiBold"/>

                    <TextBlock x:Name="RealEstateLocation" 
                                   Grid.Column="1" 
                                   Text="{Binding location.name}" 
                                   Margin="0,10,0,0" 
                                   Foreground="Black"/>

                    <TextBlock x:Name="RealEstateSource" 
                                   Grid.Column="1" 
                                   Text="{Binding source.name}" 
                                   Margin="0,10,0,0" 
                                   Foreground="Black" 
                                   TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="contacts">
        <Border Tag="{Binding url}" Background="White" Padding="15" Tap="Contact_Tap">

            <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                <TextBlock x:Name="NewsTitle" 
                               Text="{Binding DisplayName}" 
                               Foreground="Black" 
                               TextWrapping="Wrap" 
                               FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </DataTemplate>
    
    <DataTemplate x:Key="choice">
        <Border Tag="{Binding url}" Background="White" Padding="15" Tap="Contact_Tap">
            <TextBlock Text="{Binding text}"/>
        </Border>
    </DataTemplate>
</ResourceDictionary>